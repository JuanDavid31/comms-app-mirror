<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlack</item>
        <item name="colorPrimaryDark">@color/primaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/primaryText</item>

        <!--Removing this line will bug the up button in the toolbar-->
        <item name="navigationIcon">@drawable/ic_round_keyboard_arrow_left_24</item>

        <!--Changes overflow button (3 dots)-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_round_add_24</item>
    </style>

    <!--Font #1-->

    <style name="builtTitlingRgBoldFont">
        <item name="fontFamily">@font/built_titling_rg_bold</item>
    </style>

    <style name="primaryText" parent="builtTitlingRgBoldFont">
        <item name="android:textColor">@color/pinkish_grey</item>
    </style>

    <style name="primaryName" parent="primaryText">
        <item name="android:textSize">16.1sp</item>
    </style>

    <style name="toolbar" parent="primaryText">
        <item name="android:textSize">19.9sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/pinkish_grey</item>
    </style>


    <!--Font #2-->

    <style name="openSansLightFont">
        <item name="fontFamily">@font/open_sans_light</item>
    </style>

    <style name="secondaryText" parent="openSansLightFont">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="secondaryTitle" parent="openSansLightFont">
        <item name="android:textSize">10.1sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <!--Font #3-->

    <style name="callOfOpsDutyFont">
        <item name="fontFamily">@font/call_of_ops_duty</item>
    </style>

    <!--Font #4-->

    <style name="openSansRegularFont">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="priorityChannelLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">156.5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/primary_element_box_shape</item>
        <item name="android:elevation">5.3dp</item>
    </style>

    <!-- Settings -->

    <style name="Settings_CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="cardBackgroundColor">@color/black_card_view</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Settings_LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Settings_ImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Settings_TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowColor">#d4000000</item>
        <item name="android:shadowRadius">9</item>
        <item name="android:fontFamily">@font/built_titling_rg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16.1sp</item>
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Settings_SubTitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10.1sp</item>
        <item name="android:textColor">#4cffffff</item>
    </style>
</resources>