<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBlack</item>
        <item name="colorPrimaryDark">@color/primaryBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/primaryText</item>
        <!--Removing this line will bug the up button in the toolbar-->
        <item name="navigationIcon">@drawable/ic_round_keyboard_arrow_left_24</item>
        
    </style>

    <style name="toolbar">
        <item name="fontFamily">@font/call_of_ops_duty</item>
        <item name="android:textSize">19.9sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="titleTextColor">@color/primaryText</item>
    </style>
</resources>