<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/missionsFragment">

    <fragment
            android:id="@+id/missionsFragment"
            android:name="com.upstart13.legba.fragment.MissionsListFragment">
        <action
                android:id="@+id/action_Missions_fragment_to_missionFragment"
                app:destination="@id/missionFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/missionFragment"
            android:name="com.upstart13.legba.fragment.MissionFragment"
            tools:layout="@layout/fragment_mission">
        <argument
                android:name="mission"
                app:argType="com.upstart13.legba.data.dto.Mission" />
        <action
                android:id="@+id/action_missionFragment_to_channelFragment"
                app:destination="@id/channelFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/channelFragment"
            android:name="com.upstart13.legba.fragment.ChannelFragment"
            tools:layout="@layout/fragment_channel" >
        <argument
                android:name="channel"
                app:argType="com.upstart13.legba.data.dto.Channel" />
        <action
                android:id="@+id/action_channelFragment_to_subchannelFragment"
                app:destination="@id/subchannelFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/subchannelFragment"
            android:name="com.upstart13.legba.fragment.SubchannelFragment"
            tools:layout="@layout/fragment_subchannel" >
        <argument
                android:name="subchannel"
                app:argType="com.upstart13.legba.data.dto.Subchannel" />
    </fragment>
</navigation>