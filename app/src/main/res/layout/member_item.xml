<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="8.5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/primary_element_box_shape"
        android:elevation="5.3dp">

    <FrameLayout
            android:id="@+id/member_caps_layout"
            android:layout_width="38dp"
            android:layout_height="37.5dp"
            android:layout_marginStart="20.3dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/member_caps_box_shape"
            android:elevation="5.3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/member_caps_text"
                style="@style/callOfOpsDutyFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.02"
                android:text="JW"
                android:textColor="@color/greyish"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

    <TextView
            android:id="@+id/member_name_text"
            style="@style/builtTitlingRgBoldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.5dp"
            android:text="JOHN WAREN"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/member_caps_layout"
            app:layout_constraintTop_toTopOf="@+id/member_caps_layout" />

    <TextView
            android:id="@+id/member_nickname_text"
            style="@style/secondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:paddingEnd="4dp"
            android:text="Johnister"
            android:textColor="@color/greyish_93"
            app:layout_constraintBottom_toBottomOf="@+id/member_caps_layout"
            app:layout_constraintStart_toStartOf="@+id/member_name_text" />

    <TextView
            android:id="@+id/member_number_text"
            style="@style/openSansRegularFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="544321124"
            android:textColor="@color/white_93"
            android:textSize="10.1sp"
            app:layout_constraintStart_toEndOf="@+id/member_nickname_text"
            app:layout_constraintTop_toTopOf="@+id/member_nickname_text" />

    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:layout_marginEnd="19.3dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/channel_link"
            android:src="@drawable/ic_round_link_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/member_state_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/channel_link"
            android:src="@drawable/ic_mic_pending_request"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageButton" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="35dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="42dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="17dp" />

    <TextView
            android:id="@+id/request_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="18dp"
            android:textSize="10.1sp"
            android:textColor="@color/greyish_93"
            android:visibility="invisible"
            tools:visibility="visible"
            android:text="@string/request_pending"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>