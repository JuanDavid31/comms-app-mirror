<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal_layout_item"
    android:layout_width="match_parent"
    android:layout_height="96.3dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/nfc_action_item_shape">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/nfc_action_img"
        android:layout_width="68.8dp"
        android:layout_height="70.8dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="244.8dp"
        android:src="@mipmap/primary_channel_thumb"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@sample/channel" />

    <TextView
        android:id="@+id/nfc_action_name"
        style="@style/builtTitlingRgBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36.8dp"
        android:layout_marginBottom="46.5dp"
        android:layout_marginLeft="98.3dp"
        android:layout_marginRight="172.8dp"

        android:textSize="16.1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="BUTTON 1" />

    <TextView
        android:id="@+id/nfc_action_description"
        style="@style/openSansLightFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55.5dp"
        android:layout_marginBottom="30.5dp"
        android:layout_marginLeft="98.3dp"
        android:layout_marginRight="153.8dp"

        android:text="Setup the button"
        android:letterSpacing="0.02"
        android:textColor="@color/white_03"
        android:textSize="10.1sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Setup the button" />

    <ImageView
        android:id="@+id/channel_check_img"
        android:layout_width="6.5dp"
        android:layout_height="11dp"
        android:layout_marginTop="42.5dp"
        android:layout_marginBottom="42.8dp"
        android:layout_marginLeft="291.8dp"
        android:layout_marginRight="27.8dp"
        android:src="@drawable/right_arrow_copy_10"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/right_arrow_copy_10" />

</androidx.constraintlayout.widget.ConstraintLayout>