<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/primary_channel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/channel_item_shape"
        android:elevation="5.3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6.3dp"
        android:layout_marginBottom="5.8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/channel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/channel_item_shape"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/channel_image"
                android:layout_width="38dp"
                android:layout_height="37.5dp"
                android:elevation="5.3dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="@color/paleRed"
                app:riv_border_width="0.8dp"
                app:riv_corner_radius="5.3dp"
                tools:src="@sample/channel" />

        <TextView
                android:id="@+id/channel_name_text"
                style="@style/builtTitlingRgBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13.3dp"
                android:letterSpacing="0.04"
                android:shadowColor="#d4000000"
                android:shadowRadius="9"
                android:textColor="@color/pinkish_grey"
                android:textSize="16.1sp"
                app:layout_constraintStart_toEndOf="@+id/channel_image"
                app:layout_constraintTop_toTopOf="@+id/channel_image"
                tools:text="ALPHA TEAM" />

        <TextView
                android:id="@+id/channel_type_text"
                style="@style/openSansRegularFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:letterSpacing="0.02"
                android:text="Primary Channel"
                android:textColor="@color/paleRed"
                android:textSize="10.1sp"
                app:layout_constraintBottom_toBottomOf="@+id/channel_image"
                app:layout_constraintStart_toStartOf="@+id/channel_name_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="43dp" />


</androidx.constraintlayout.widget.ConstraintLayout>